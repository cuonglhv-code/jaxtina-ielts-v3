# ── Copy this file to .env.local and fill in your values ─────────────────────
# .env.local is in .gitignore and will NEVER be committed to GitHub

# Supabase — find these in: Supabase Dashboard → Project Settings → API
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Anthropic — find this at: console.anthropic.com → API Keys
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# App URL
# Local development: keep as http://localhost:3000
# Production: change to your Vercel URL e.g. https://jaxtina-ielts.vercel.app
NEXT_PUBLIC_SITE_URL=http://localhost:3000
